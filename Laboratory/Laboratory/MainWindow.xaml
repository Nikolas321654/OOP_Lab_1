<Window x:Class="Laboratory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <ComboBox HorizontalAlignment="Left"
                  x:Name="WorkComboBox"
                  Height="27"
                  Width="200"
                  SelectionChanged="ComboBox_SelectionChanged"
                  Margin="0,0,0,10">
            
            <ComboBoxItem Name="FirstWork">Work-1</ComboBoxItem>
            <ComboBoxItem Name="SecondWork">Work-2</ComboBoxItem>
        </ComboBox>

        <TextBlock Text="Values:"
                   Background="LightBlue"
                   Padding="5"
                   Margin="0,0,0,10"/>

        <TextBlock x:Name="ContentTextBlock"
                   TextWrapping="Wrap"
                   Padding="10"
                   Height="300"/>
    </StackPanel>
</Window>
